
<div class="navbar bg-accent">
  <div class="flex-1">
    <%= link_to t('header.title'), root_path, class: 'btn btn-ghost text-xl' %>
  </div>
  <div class="flex-none gap-2">
    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
        <div class="w-10 rounded-full">
          <%= image_tag 'default_icon.jpg' %>
        </div>
      </div>
      <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
        <li><%= link_to t('header.profile'), "#", class: 'justify-between' %></li>
        <li><%= link_to 'setting', "#", class: 'justify-between' %></li>
        <li><%= link_to t('header.logout'), logout_path, class: 'justify-between', data: { turbo_method: :delete } %></li>
      </ul>
    </div>
  </div>
</div>
